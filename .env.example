# StoryNest Environment Configuration
# Copy this file to .env and fill in your values
#
# For Netlify deployment:
# Set these variables in Netlify Dashboard > Site settings > Environment variables

# Auth0 Configuration
# Get these from your Auth0 dashboard at https://manage.auth0.com
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your_client_id_here

# Redirect URI after authentication
# For local development: http://localhost:5173
# For Netlify: https://your-site-name.netlify.app
# NOTE: Add this URL to Auth0 Allowed Callback URLs and Allowed Logout URLs
VITE_REDIRECT_URI=http://localhost:5173

# Backend API URL
# Point this to your StoryNest backend server
VITE_BACKEND_URL=http://localhost:8000
